@import 'styles/main.pcss';

.Tag {
    background-color: var(--primary);
    border-radius: 7.5px;
    color: var(--white);
    display: block;
    font-size: 16px;
    padding: 7.5px;
    text-transform: lowercase;
    transition: color 0.2s;

    &:hover {
        color: rgba(255, 255, 255, 0.8);
    }
}

@media (--small-only) {

    .Tag {
        font-size: 14px;
    }
}
