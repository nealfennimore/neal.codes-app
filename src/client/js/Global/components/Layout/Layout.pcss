@import 'styles/main.pcss';

.Layout {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    min-height: 100vh;
    padding-top: var(--navigation-height);
    width: 100vw;

    & > * {
        max-width: var(--xlarge-width);
    }

    &.inverse {
        background-color: var(--primary);
        color: var(--white);
    }
}
